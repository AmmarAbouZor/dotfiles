# Start window in full screen mode by setting the values to high values.
window-height = 10000
window-width = 10000

mouse-hide-while-typing = true

copy-on-select = clipboard

keybind = clear

# Set <c-m> and <c-i> to <CR> and <Tab>
keybind = ctrl+m=text:\x0D
keybind = ctrl+i=text:\x09
# Map Ctrl+Backspace to <C-w>
keybind = ctrl+backspace=text:\x17

keybind = shift+alt+y=new_tab
keybind = alt+shift+p=next_tab


keybind = ctrl+shift+v=paste_from_clipboard

